# ── Database ──────────────────────────────────────────────
DATABASE_URL="postgresql://deezed:deezed_dev_password@localhost:5432/deezed?schema=public"

# ── Clerk Auth ────────────────────────────────────────────
# Get keys from https://dashboard.clerk.com → your app → API Keys
CLERK_SECRET_KEY="sk_test_your_clerk_secret_key"
CLERK_PUBLISHABLE_KEY="pk_test_your_clerk_publishable_key"
# For mobile app (same as CLERK_PUBLISHABLE_KEY)
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_clerk_publishable_key"

# ── OpenAI ────────────────────────────────────────────────
# Get key from https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-proj-your_openai_api_key"
OPENAI_MODEL="gpt-4o"

# ── S3-compatible Storage ──────────────────────────────────
# Local (MinIO):
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="deezed_minio"
S3_SECRET_KEY="deezed_minio_secret"
S3_BUCKET="deezed-photos"
S3_REGION="us-east-1"
# Production (Cloudflare R2):
# S3_ENDPOINT="https://<ACCOUNT_ID>.r2.cloudflarestorage.com"
# S3_ACCESS_KEY="<R2 Access Key ID>"
# S3_SECRET_KEY="<R2 Secret Access Key>"
# S3_BUCKET="deezed-photos"
# S3_REGION="auto"

# ── API ───────────────────────────────────────────────────
API_HOST="0.0.0.0"
API_PORT=3001
# Local dev: use your PC's Wi‑Fi IPv4 (e.g. http://192.168.1.100:3001)
# Production: use your Railway URL (e.g. https://deezed-api-production.up.railway.app)
EXPO_PUBLIC_API_URL="http://localhost:3001"

# ── Rate Limiting ─────────────────────────────────────────
RATE_LIMIT_AI_MAX=20
RATE_LIMIT_AI_WINDOW_MS=60000
